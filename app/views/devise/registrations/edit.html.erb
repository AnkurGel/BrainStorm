<%= javascript_tag "var colleges = #{College.select('id, name').to_json }" %>
<% provide(:title, "Edit account details") %>
<h1>Provide college name</h1>
<div class="row">
  <div class="span7 offset4">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.label :college_name, "College/Institute name" %>
    <%= f.text_field :college_id, :data => {:provide => "typeahead",
    :menu => "#menu_list"}, :autocomplete => "off" %>
    <em>Start typing full name of institution, choose <strong>Other</strong> if not in list.<br/></em>
    <%= f.submit "Update", :class => "btn btn-large btn-success " %>
    <% end %>

    <%= link_to "Back", :back %>
  </div>
</div>
